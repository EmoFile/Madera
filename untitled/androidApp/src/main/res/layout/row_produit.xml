<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/product_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/product_total_price"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintStart_toEndOf="@+id/product_number"
            android:layout_marginStart="76dp"/>
    <EditText
            android:layout_width="46dp"
            android:layout_height="20dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/product_number"
            app:layout_constraintStart_toEndOf="@+id/product_name" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="144dp" android:autofillHints=""
            android:hint="@string/_0"/>
</androidx.constraintlayout.widget.ConstraintLayout>